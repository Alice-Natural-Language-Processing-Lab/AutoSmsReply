<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/scheduled_sms_receiver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/quickContactBadge1"
        android:paddingLeft="10dp"
        android:text="To:"
        android:textSize="25dp" />

    <QuickContactBadge
        android:id="@+id/quickContactBadge1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/scheduled_sms_send_date"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:paddingLeft="10dp" />

    <TextView
        android:id="@+id/scheduled_sms_send_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/scheduled_sms_receiver"
        android:paddingRight="10dp"
        android:text="date" />

    <TextView
        android:id="@+id/scheduled_sms_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/scheduled_sms_receiver"
        android:layout_below="@+id/scheduled_sms_receiver"
        android:paddingLeft="10dp"
        android:text="message to send" />

</RelativeLayout>
